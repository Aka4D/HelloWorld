@using HelloWorld.Data;

@inject CounterState state;


<h1>Counter</h1>

<p role="status">Current count: @state.count</p>

<button class="btn btn-primary" @onclick="state.UpdateCounter">Click me</button>

@code {

    protected override void OnInitialized()
    {
        base.OnInitialized();

        state.CounterChanged += (sender, bla) =>
        {
            this.StateHasChanged();
        };
    }
}
