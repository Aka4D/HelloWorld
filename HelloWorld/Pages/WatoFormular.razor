@using HelloWorld.Model

@page "/formular"

<h1>WATO-SOFT</h1>
<br />

<div>
    <EditForm Model="@newUserModel" OnValidSubmit="@HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit">
        <!--Sumbit-Handler-->
   
        <DataAnnotationsValidator /> <!--component is added inside the EditForm component in order to add the validation support.-->

        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <h3>Ich bin bereits Kunde</h3>
                    <h6>______________________________________________________</h6>
                    <h6>Einloggen mit E-Mail-Adresse und Passwort</h6>
                    <br />

                    <div class="col">
                        <label>Ihre E-Mail-Adresse</label>
                        <InputText @bind-Value="newUserModel.Email2"></InputText>
                    </div>
                    <div class="col">
                        <label>Ihr Passwort</label>
                        <InputText type="password" @bind-Value="newUserModel.Passwort2"></InputText>
                    </div>
                </div>
                <br />
                <button type="submit">Anmelden</button>
            </div>


            <div class="col-md-8">
                <div class="row">
                    <h3>Ich bin Neukunde</h3>
                    <h6>____________________________________________________________________________________________________</h6>
                    <br />
                </div>
                <div class="col-sm">
                    <label>Anrede*</label><br />
                    <InputSelect @bind-Value="newUserModel.Anrede1" style="width: 15%;">
                        <option value="">Bitte wählen</option>
                        <option value="Keine Angabe">Keine Angabe</option>
                        <option value="Herr">Frau</option>
                        <option value="Herr">Herr</option>
                    </InputSelect>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-5">
                        <label>Vorname*</label><br />
                        <InputText @bind-Value="newUserModel.Vorname1" style="width:100%;"></InputText>
                    </div>
                    <div class="col-sm-5">
                        <label>Nachname*</label><br />
                        <InputText @bind-Value="newUserModel.Nachname1" style="width:100%;"></InputText>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-5">
                        <label>Ihre E-Mail-Adresse*</label><br />
                        <InputText @bind-Value="newUserModel.Email1" style="width:100%;"></InputText>
                    </div>
                    <div class="col-sm-5">
                        <label>Ihr Passwort*</label><br />
                        <InputText type="password" @bind-Value="newUserModel.Passwort1" style="width:100%;"></InputText>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5">
                        @*Placeholder*@
                    </div>
                    <div class="col-sm-5">
                        <label style="font-size: 60%;">Das Passwort muss mindestens 8 Zeichen lang sein</label><br />
                    </div>
                </div>
                <br />
                <br />
                <div class="row">
                    <h3>Ihre Adresse</h3>
                    <h6>____________________________________________________________________________________________________</h6>
                    <br />
                </div>
                <div class="row">
                    <div class="col-sm-5">
                        <label>Strasse und Hausnummer*</label><br />
                        <InputText @bind-Value="newUserModel.Strasse1" style="width:100%;"></InputText>
                    </div>
                    <div class="col-sm-5">
                        <div class="row">
                            <div class="col-sm-4">
                                <label>PLZ*</label><br />
                                <InputText @bind-Value="newUserModel.PLZ1" style="width:100%;"></InputText>
                            </div>
                            <div class="col-sm-8">
                                <label>Ort*</label><br />
                                <InputText @bind-Value="newUserModel.Ort1" style="width:100%;"></InputText>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm">
                        <label>Land*</label><br />
                        <InputSelect @bind-Value="newUserModel.Land1" style="width: 40%;" Placeholder="Anrede eingeben...">
                            <option value="">Bitte wählen</option>
                            <option value="Schweiz">Schweiz</option>
                        </InputSelect>
                    </div>
                </div>
                <br />
                <label>
                    <InputCheckbox @bind-Value="newUserModel.EnableAddress" @onclick="ShowAdress"></InputCheckbox>
                    Die Lieferadresse weicht von der Rechnungsadresse ab.
                </label>
                <br />
                <br />
                <div hidden="@isShow">
                    <div class="row">
                        <h3>Abweichende Lieferadresse</h3>
                        <h6>____________________________________________________________________________________________________</h6>
                        <br />
                    </div>
                    <div class="col-sm">
                        <label>Anrede*</label><br />
                        <InputSelect @bind-Value="newUserModel.Anrede2" style="width: 15%;">
                            <option value="">Bitte wählen</option>
                            <option value="Keine Angabe">Keine Angabe</option>
                            <option value="Herr">Frau</option>
                            <option value="Herr">Herr</option>
                        </InputSelect>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5">
                            <label>Vorname*</label><br />
                            <InputText @bind-Value="newUserModel.Vorname2" style="width:100%;"></InputText>
                        </div>
                        <div class="col-sm-5">
                            <label>Nachname*</label><br />
                            <InputText @bind-Value="newUserModel.Nachname2" style="width:100%;"></InputText>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5">
                            <label>Strasse und Hausnummer*</label><br />
                            <InputText @bind-Value="newUserModel.Strasse2" style="width:100%;"></InputText>
                        </div>
                        <div class="col-sm-5">
                            <div class="row">
                                <div class="col-sm-4">
                                    <label>PLZ*</label><br />
                                    <InputText @bind-Value="newUserModel.PLZ2" style="width:100%;"></InputText>
                                </div>
                                <div class="col-sm-8">
                                    <label>Ort*</label><br />
                                    <InputText @bind-Value="newUserModel.Ort2" style="width:100%;"></InputText>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm">
                            <label>Land*</label><br />
                            <InputSelect @bind-Value="newUserModel.Land2" style="width: 40%;">
                                <option value="">Bitte wählen</option>
                                <option value="Schweiz">Schweiz</option>
                            </InputSelect>
                        </div>
                    </div>
                </div>
                <br />
                <button type="submit">Weiter</button>
            </div>

        </div>
    </EditForm>
</div>

@code {
    private bool isShow { get; set; } = true;
    public bool isRequired { get; set; } = false;

    private List<UserModel> UserList = new List<UserModel>();
    private UserModel newUserModel = new UserModel();             /*<--Make a new instance of the Model*/

    private void AddUser()
    {
        UserList.Add(newUserModel);                                   /*<--Add new Task in Model*/
        newUserModel = new UserModel();                               /*<--To reset that value*/
    }


    private void HandleValidSubmit(EditContext context)
    {
        //displayValidationErrorMessages = false;
        //displayUserAddedToDB = true;
    }

    private void HandleInvalidSubmit(EditContext context)
    {
        //displayValidationErrorMessages = true;
        //displayUserAddedToDB = false;
    }

    public void ShowAdress()
    {
        isShow = !isShow;
        isRequired = !isRequired;
    }
}